
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	</ui:style>
	<g:HTMLPanel>
		<div class="container" style="padding:0">
			<h1 class="page-header">Loan payment calculator</h1><br></br>
			<div class="container" style="padding:0">
				<form>
					<div class="form-group">
						<label>Loan amount</label>
						<g:TextBox ui:field="textLoanAmount"
							styleName="form-control"></g:TextBox>
					</div>
					<div class="form-group">
						<label>Period in months</label>
						<g:TextBox ui:field="textPeriodInMonths"
							styleName="form-control"></g:TextBox>
					</div>
					<div class="form-group">
						<label>Year interest rate</label>
						<g:TextBox ui:field="textYearInterestRate"
							styleName="form-control"></g:TextBox>
					</div><br></br><br></br>
					<g:Button ui:field="calculatePayments"
						styleName="form-control">Calculate payments</g:Button><br></br><br></br>
					<label>Payments table</label>
					<g:FlexTable ui:field="paymentsTable"
						styleName="form-control"></g:FlexTable>
				</form>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 